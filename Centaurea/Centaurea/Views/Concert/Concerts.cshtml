@model IEnumerable<Concert>
@{
    ViewData["Title"] = "Concerts";
}

<h1>Concerts</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead> 
                <tr>
                    <th> @Html.DisplayNameFor(model => model.ImageURL)</th>
                    <th> @Html.DisplayNameFor(model => model.PerformerName)</th>
                    <th> @Html.DisplayNameFor(model => model.TicketsCount)</th>
                    <th> @Html.DisplayNameFor(model => model.PerformanceDate)</th>
                    <th> @Html.DisplayNameFor(model => model.Location)</th>
                    <th> @Html.DisplayNameFor(model => model.Description)</th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src ="@item.ImageURL" alt="@item.PerformerName" style="max-width: 150px"></img>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.PerformerName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.TicketsCount)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.PerformanceDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Location)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td class="align-middle"> 
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tr>
                <td>

                </td>
            </tr>
        </table>
    </div>
</div>
